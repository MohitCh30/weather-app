{
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2020", // safer for Angular build tools
    "module": "es2020", // common Angular setting
    "moduleResolution": "node", // ensures imports work properly
    "baseUrl": "./", // lets you use relative paths like "@/app/..."
    "types": [] // avoids pulling in unneeded types
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "include": [
    "src/**/*.ts",
    "src/sql.js.d.ts"  // Ensure sql.js types are included
  ]
}
